<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="exampleInputEmail1">Tên Khóa Học</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name"  placeholder="Nhập tên Khóa Học...">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Mô Tả</label>
            <input type="text" class="form-control" value="{{course.description}}" name="description"  placeholder="Nhập mô tả...">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId"  placeholder="nhập video Id...">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>