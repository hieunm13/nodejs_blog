<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="exampleInputEmail1">Tên Khóa Học</label>
            <input type="text" class="form-control" name="name"  placeholder="Nhập tên Khóa Học...">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Mô Tả</label>
            <input type="text" class="form-control" name="description"  placeholder="Nhập mô tả...">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Video Id</label>
            <input type="text" class="form-control" name="videoId"  placeholder="nhập video Id...">
        </div>
        <button type="submit" class="btn btn-primary">Thêm Khóa Học</button>
    </form>
</div>